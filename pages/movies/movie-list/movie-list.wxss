@import "../movie/movie"

.movie-list-container{
  background: #fff;
  display: flex;
  flex-direction: column;
  margin-bottom: 30rpx;
}

.list-head{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: baseline;
  padding: 5rpx 20rpx;
}

.slogan{
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;  
}

.more-text{
  color: #c2185b;
  margin-right: 10rpx;
}

.more-img{
  width: 9rpx;
  height: 16rpx;
}

.movies-container{
  display: flex; 
  flex-direction: row;
  justify-content: center;
}