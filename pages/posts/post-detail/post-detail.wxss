.container{
	display: flex;
	flex-direction: column;
}

.head-image{
	width: 100%;
	height: 460rpx;
}

.audio{
	width: 102rpx;
	height: 110rpx;
	position: absolute;
	top: 180rpx;
	left: 50%;
	margin-left: -51rpx;
	opacity: 0.86;
}

.author-date{
	flex-direction: row;
	margin-top: 20rpx;
	margin-left: 30rpx;
}

.avatar{
	width: 64rpx;
	height: 64rpx;
	vertical-align: middle;
}

.author{
	font-size: 30rpx;
	font-weight: 300;
	margin-left: 20rpx; 
	vertical-align: middle;
	color: #666;
}

.const_text{
	margin-left: 20rpx;
	color: #999;
}

.date{
	margin-left: 30rpx;
	vertical-align: middle;
	color: #999;
}

.title{
	font-size: 36rpx;
	color: #4b556c;
	font-weight: 700;
	margin-top: 30rpx;
	margin-left: 40rpx;
	letter-spacing: 2px;
}

.tool{
	margin-top: 20rpx;
}

.circle_image{
	float: right;
	margin-right: 40rpx;
	vertical-align: middle;
}

.circle_image image{
	width: 90rpx;
	height: 90rpx;
}

.share_image{
	margin-left: 30rpx;
}

.horizon{
	width: 660rpx;
	height: 1px;
	background-color: #e5e5e5;
	vertical-align: middle;
	position: relative;
	top: 46rpx;
	margin: 0 auto;
	z-index: -99;
}

.detail{
	color: #666;
	margin: 20rpx 30rpx 0 30rpx;
	line-height: 44rpx;
	letter-spacing: 2px;
}